@{
    Layout = "_Layout";
}

<div class="col-lg-12">
    <div class="box box-default">
        <div class="box-body">
            <div class="col-lg-2">
                <div class="form-group">
                    <img class="img img-responsive img-thumbnail" src="http://via.placeholder.com/512x512" />
                </div>
            </div>
            <div class="col-lg-10">

                @*Email*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Email</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-envelope"></span>
                            </span>
                            <input class="form-control" />
                        </div>
                    </div>
                </div>

                @*Nickname*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Nickname</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="fa fa-credit-card"></span>
                            </span>
                            <input class="form-control" />
                        </div>
                    </div>
                </div>

                @*Password*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Password</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="fa fa-key"></span>
                            </span>
                            <input class="form-control" type="password" readonly="readonly" />
                        </div>
                    </div>
                </div>

                @*Status*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Status</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="fa fa-sun-o"></span>
                            </span>
                            <select class="form-control"></select>
                        </div>
                    </div>
                </div>

                @*Joined time*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Joined</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                            <input class="form-control" readonly="readonly"/>
                        </div>
                    </div>
                </div>
                
                @*Last modified time*@
                <div class="row">
                    <div class="col-md-3">
                        <label>Last modified time</label>
                    </div>
                    <div class="col-md-9">
                        <div class="input-group form-group">
                            <span class="input-group-addon">
                                <span class="fa fa-clock-o"></span>
                            </span>
                            <input class="form-control" readonly="readonly" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="box box-info">
        <div class="box-body">
            <ul class="nav nav-pills nav-justified">
                <li role="presentation" class="active">
                    <a href="#">Topics</a>
                </li>
                <li role="presentation">
                    <a href="#">Messages</a>
                </li>
            </ul>
        </div>
    </div>
</div>
